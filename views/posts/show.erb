<div class="large_post_box">
	<img class="big_image" src="<%= @micro_post.img_url%>">
	<h4><%= @micro_post.title%></h4>
	<p><%= @micro_post.words%></p>
	<p class="post_stat"><%= @micro_post.author.name %> - <%= @micro_post.created_on%> | <a href="/posts/<%= @micro_post.id %>/edit">Edit</a></p>
	<p class="post_stat">Tags: <br>
		<% @micro_post.tags.each do |tag|%>
			<a href="/tags/<%=tag.id%>"><%=tag.name%></a> 
		<%end%> | 
		<form action="/posts/<%= @micro_post.id%>" method="post">
			<input type="hidden" name="_method" value="DELETE">
			<button>Remove</button>
		</form>
	</p>
</div>

<div class="author_post_box author_bkgd">
	<a href="/authors/<%=@micro_post.author.id%>"><img class="thumbnail" src="<%= @micro_post.author.img_url%>">
	<p><%= @micro_post.author.name%></p></a>
	<p class="post_stat"><%= @micro_post.author.bio %><br><%= @micro_post.author.location%> | <a href="/authors/<%=@micro_post.author.id%>/edit">Edit</a></p>
</div>