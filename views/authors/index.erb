<% @authors.each do |author| %>
	
	<div class="post_box author_bkgd">
		<p><%= author.name%></p>
		<a href="/authors/<%= author.id %>"><img class="thumbnail" src="<%= author.img_url%>"></a>
	<p class="post_stat"><%= author.bio %><br><%=author.location%> | <a href="/authors/<%=author.id%>/edit">Edit</a></p>
	</div>

<% end %>